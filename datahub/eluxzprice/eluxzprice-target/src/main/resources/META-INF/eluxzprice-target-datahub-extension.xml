<extension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.hybris.com/schema/"
		   xsi:schemaLocation="http://www.hybris.com/schema/ http://www.hybris.com/schema/datahub-metadata-schema-1.2.0.xsd"
		   name="eluxzprice-target">

	<dependencies>
		<dependency>
			<extension>eluxzprice-canonical</extension>
		</dependency>
	</dependencies>

	<targetSystems>
		<targetSystem>
			<name>HybrisCore</name>
			<type>HybrisCore</type>
			<exportURL>${datahub.extension.exportURL}</exportURL>
			<userName>${datahub.extension.userName}</userName>
			<password>${datahub.extension.password}</password>
			<exportCodes>
				<exportCode>#% impex.setLocale(Locale.ENGLISH)</exportCode>
			</exportCodes>
			<targetItems>
				<item>
					<type>EluxProductModelId</type>
					<exportCode>EluxProduct</exportCode>
					<description>Hybris Platform representation ELUX Product model id</description>
					<updatable>true</updatable>
					<canonicalItemSource>CanonicalEluxPrice</canonicalItemSource>
					<status>ACTIVE</status>
					<attributes>
						<attribute>
							<name>part</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>part</transformationExpression>
							<exportCode>code[unique=true]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>catalogVersion</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>''</transformationExpression>
							<exportCode>$catalogVersion</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>modelId</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>modelId</transformationExpression>
							<exportCode>modelId</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
					</attributes>
				</item>
				<item>
					<type>EluxPrice</type>
					<exportCode>PriceRow</exportCode>
					<description>Hybris Platform representation of Price Item</description>
					<updatable>true</updatable>
					<canonicalItemSource>CanonicalEluxPrice</canonicalItemSource>
					<status>ACTIVE</status>
					<attributes>
						<attribute>
							<name>company</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>company + '-' + currency + '-prices'</transformationExpression>
							<exportCode>ug(code)[unique=true]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>part</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>part</transformationExpression>
							<exportCode>productId[unique=true]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>currency</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>currency</transformationExpression>
							<exportCode>currency(isocode)[unique=true]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>price</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>price</transformationExpression>
							<exportCode>price[numberformat=###,##]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute><!-- price[numberformat=###,##] -->
						<attribute>
							<name>fromDate</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>fromDate</transformationExpression>
							<exportCode>startTime[dateformat='yyyyMMdd']</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>unit</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>''</transformationExpression>
							<exportCode>unit(code[unique=true,default=pieces])</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>minqtd</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>''</transformationExpression>
							<exportCode>minqtd[default=1,unique=true]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>unitFactor</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>''</transformationExpression>
							<exportCode>unitFactor[default=1,unique=true]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>net</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>''</transformationExpression>
							<exportCode>net[default=true,unique=true]</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>available</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>available</transformationExpression>
							<exportCode>available[default='']</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
						<attribute>
							<name>type</name>
							<localizable>false</localizable>
							<collection>false</collection>
							<transformationExpression>type</transformationExpression>
							<exportCode>priceType[default='']</exportCode>
							<mandatoryInHeader>true</mandatoryInHeader>
						</attribute>
					</attributes>
				</item>
			</targetItems>
		</targetSystem>
	</targetSystems>
	
<!-- 
	New Custom Hybris attributes
					<attribute type="java.lang.String" qualifier="priceType">
						<modifiers optional="true" />
						<persistence type="property" />
						<description>Attribute received by REX price interface</description>
					</attribute>
					<attribute type="java.lang.String" qualifier="available">
						<modifiers optional="true" />
						<persistence type="property" />
						<description>Attribute received by REX price interface</description>
					</attribute>
 -->
 
</extension>
