<extension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.hybris.com/schema/"
		   xsi:schemaLocation="http://www.hybris.com/schema/ http://www.hybris.com/schema/datahub-metadata-schema-1.2.0.xsd"
		   name="eluxzprice-raw">

	<dependencies>
		<dependency>
			<extension>eluxzprice-canonical</extension>
		</dependency>
	</dependencies>
	
	<rawItems>
		<item>
			<type>RawEluxPrice</type>
			<description>Raw representation of a Price raw item</description>
			<attributes>
				<attribute><name>companyCode</name></attribute>
				<attribute><name>partNumber</name></attribute>
				<attribute><name>price</name></attribute>
				<attribute><name>currency</name></attribute>
				<attribute><name>priceStatus</name></attribute>
				<attribute><name>priceType</name></attribute>
				<attribute><name>validDate</name></attribute>
				<attribute><name>partAvailable</name></attribute>
				<attribute><name>commercialRef</name></attribute>
			</attributes>
		</item>
	</rawItems>

	<canonicalItems>
		<item>
			<type>CanonicalEluxPrice</type>
			<attributes>
				<attribute>
					<name>company</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>companyCode</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>part</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>partNumber</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>price</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression spel="true">price.substring(0,price.length()-2) + "." + price.substring(price.length()-2, price.length())</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>currency</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>currency</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>status</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>priceStatus</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>type</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>priceType</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>fromDate</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>validDate</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>available</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>partAvailable</expression>
						</transformation>
					</transformations>
				</attribute>
				<attribute>
					<name>modelId</name>
					<transformations>
						<transformation>
							<rawSource>RawEluxPrice</rawSource>
							<expression>commercialRef</expression>
						</transformation>
					</transformations>
				</attribute>
			</attributes>
		</item>

	</canonicalItems>
	
</extension>
